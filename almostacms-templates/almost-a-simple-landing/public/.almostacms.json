{
  "version": "1.0",
  "templateName": "almost-a-simple-landing",
  "templateVersion": "1.0.0",
  "deployment": {
    "path": "/",
    "adminPath": "/admin/",
    "source": {
      "branch": "main",
      "path": "/"
    }
  },
  "content": {
    "dataPath": "data/"
  },
  "sections": [
    {
      "id": "hero",
      "dataFile": "hero.json",
      "order": 1,
      "required": true,
      "label": "Hero Section"
    },
    {
      "id": "features",
      "dataFile": "features.json",
      "order": 2,
      "required": true,
      "label": "Features"
    },
    {
      "id": "howItWorks",
      "dataFile": "howItWorks.json",
      "order": 3,
      "required": false,
      "label": "How It Works"
    },
    {
      "id": "showcase",
      "dataFile": "showcase.json",
      "order": 4,
      "required": false,
      "label": "Showcase"
    },
    {
      "id": "openSource",
      "dataFile": "openSource.json",
      "order": 5,
      "required": false,
      "label": "Open Source"
    },
    {
      "id": "support",
      "dataFile": "support.json",
      "order": 6,
      "required": false,
      "label": "Support"
    },
    {
      "id": "faq",
      "dataFile": "faq.json",
      "order": 7,
      "required": false,
      "label": "FAQ"
    },
    {
      "id": "cta",
      "dataFile": "cta.json",
      "order": 8,
      "required": true,
      "label": "Call to Action"
    }
  ],
  "build": {
    "outputDir": "dist",
    "baseUrl": "/"
  }
}
